<div class="form-group">
    <label for="title" class="mb-2">Title</label>
    <input required type="text" class="form-control mb-4" id="title" name="title" placeholder="Enter the title">
  </div>

  <div class="form-group">
    <label for="description" class="mb-2">Description</label>
    <textarea required class="form-control mb-4" id="description" rows="3" name="description" placeholder="Enter the description"></textarea>
  </div>

  <div class="form-group">
    <label for="markdown" class="mb-3">Markdown</label>
    <textarea required class="form-control mb-4" id="markdown" rows="5" name="markdown" placeholder="Enter markdown content"></textarea>
  </div>

  <a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary btn-block">Save</button>